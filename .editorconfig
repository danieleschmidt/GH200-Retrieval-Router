# EditorConfig for GH200-Retrieval-Router
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,json,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{md,txt}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{py,pyx,pyd}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{cu,cuh,cpp,hpp,c,h}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{dockerfile,Dockerfile*}]
indent_style = space
indent_size = 2

# Grace Hopper specific files
[*.grace]
indent_style = space
indent_size = 2

# Vector database files
[*.{faiss,index,vectors}]
charset = utf-8
end_of_line = lf
